@import url('https://fonts.googleapis.com/css2?family=Readex+Pro:wght@400;500&display=swap');

:root
	--app-font 'Readex Pro'
	--display-large: 400 64px/76px var(--app-font), sans-serif
	--headline-small: 400 24px/32px var(--app-font), sans-serif
	--title-large: 400 22px/28px var(--app-font), sans-serif
	--title-small: 500 14px/20px var(--app-font), sans-serif
	--label-large: 500 14px/20px var(--app-font), sans-serif
	--label-medium: 500 12px/16px var(--app-font), sans-serif
	--body-large: 400 16px/24px var(--app-font), sans-serif
	--body-medium: 400 14px/20px var(--app-font), sans-serif
	--body-small: 400 12px/16px var(--app-font), sans-serif